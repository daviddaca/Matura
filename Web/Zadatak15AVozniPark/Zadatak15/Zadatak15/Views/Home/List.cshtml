@model  Zadatak15.Models.Vozila

@{
    ViewBag.Title = "View";
}

<h2>Spisak vozila</h2>


<div>
    @using (Html.BeginForm("Index", "Home"))
    {
        <div class="form-group">
            <label class="control-label col-md-2">Registarski broj</label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.RegistarskiBroj, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-2">
                <input type="submit" value="Traži" class="btn btn-default" />
            </div>
        </div>
    }
</div>

<div style="clear:both;"></div>

<div style="padding-top:20px;">

    <table class="table">
        <tr>
            <th>
                Registarsko broj
            </th>
            <th>
                Marka vozila
            </th>
            <th>
                Godina proizvodnje
            </th>
            <th>
                Boja
            </th>
            <th>
                Ukupan predjeni put
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ListaVozila)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistarskiBroj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarkaVozila)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GodinaProizvodnje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Boja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UkupanPredjeniPut)
                </td>
            </tr>
        }

    </table>

</div>
